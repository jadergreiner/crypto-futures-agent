# Telegram Alerts Configuration
# ==============================
# Copie este arquivo para .env.local e preencha com suas credenciais

# Bot token (obtido de BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Chat ID do destinatário (seu ID de usuário ou grupo)
TELEGRAM_CHAT_ID=your_chat_id_here

# Webhook secret para validação de assinatura
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Alert Level: DEBUG, INFO, WARNING, CRITICAL
TELEGRAM_ALERT_LEVEL=INFO

# Rate limiting: máximo de alertas por minuto
TELEGRAM_MAX_ALERTS_PER_MINUTE=10

# Quiet hours: silencia alertas não-críticos fora do horário
TELEGRAM_QUIET_HOURS_ENABLED=false
TELEGRAM_QUIET_START=22
TELEGRAM_QUIET_END=6

# Webhook: porta e host
TELEGRAM_WEBHOOK_PORT=8000
TELEGRAM_WEBHOOK_HOST=127.0.0.1

# Alert types habilitados (true/false)
TELEGRAM_ALERT_EXECUTION=true
TELEGRAM_ALERT_PNL=true
TELEGRAM_ALERT_RISK=true
TELEGRAM_ALERT_ERROR=true
TELEGRAM_ALERT_DAILY_SUMMARY=true

# Exemplo de valores:
# TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
# TELEGRAM_CHAT_ID=987654321
